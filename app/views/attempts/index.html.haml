%h1 Listing attempts

%table
  %tr
    %th Answer
    %th Question
    %th User
    %th Final
    %th Score
    %th
    %th
    %th

  - @attempts.each do |attempt|
    %tr
      %td= attempt.answer
      %td= attempt.question_id
      %td= attempt.user_id
      %td= attempt.final
      %td= attempt.score
      %td= link_to 'Show', attempt
      %td= link_to 'Edit', edit_attempt_path(attempt)
      %td= link_to 'Destroy', attempt, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Attempt', new_question_attempt_path(@question)
