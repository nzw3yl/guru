%tbody
  %tr
    %td
      = link_to image_tag(get_user_avatar_url(question.user_id)), user_path(question.user_id)
    %td
      %table.table-condensed.table-borderless
        %tr
          %td.span8
            %span.muted
              = User.find(question.user_id).first_name || "First Name"
            %span.muted
              = User.find(question.user_id).last_name || "Last Name"
          %td
            %span.pull-right.hidden-phone
              %em.muted
                = time_ago_in_words(question.created_at)
        %tr
          %td= question_preview_with_link(question, 120)
        %tr
          %td
            %span
              = link_to new_question_attempt_path(question) do
                %i.icon-check 
                %em.muted answer
                |
            %span
              = link_to edit_question_path(question) do
                %i.icon-edit
                %em.muted edit
                |
            %span
              = link_to(question, method: :delete, data: { confirm: 'Are you sure?' }) do
                %i.icon-remove-sign
                %em.muted destroy
                |